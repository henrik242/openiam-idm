<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xmlns:jee="http://www.springframework.org/schema/jee"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
    					http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
    					http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
    					http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-2.0.xsd">




	<!-- SPML Service: Active Directory  -->
	
	
	<!-- SPML Service: ldap Directory  -->
	
	<bean id="ldapSpmlCoreService" class="org.openiam.spml2.spi.ldap.LDAPSpmlCore">
		<property name="managedSysService" ref="managedSysService" />
		<property name="connection" ref="ldapConnectionMgr" />
	</bean>
	
	<bean id="ldapConnectionMgr" class="org.openiam.spml2.spi.ldap.LdapConnectionMgr">
	</bean>

</beans>

