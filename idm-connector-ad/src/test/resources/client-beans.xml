<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-2.5.xsd">


 
    <bean id="adService" class="org.openiam.spml2.interf.SpmlCore" 
      factory-bean="activeDirClientFactory" factory-method="create"/>

	<bean id="activeDirClientFactory" class="org.apache.cxf.jaxws.JaxWsProxyFactoryBean">
	  <property name="serviceClass" value="org.openiam.spml2.interf.SpmlCore"/>
	  <property name="address" value="http://localhost:8080/idm-connector-ad/ActiveDirSpmlCoreService"/>
	</bean>



	  
</beans>