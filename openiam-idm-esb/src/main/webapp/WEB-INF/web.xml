<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	version="2.4"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee   http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:applicationContext.xml classpath:connector-coreContext.xml classpath:idmservice-Context.xml</param-value>
	</context-param>

	<context-param>
		<param-name>org.mule.config</param-name>
		<param-value>openiam-mule-config.xml openiam-connector-mule-config.xml openiam-embedded-mule-config.xml openiam-idmservice-mule-config.xml</param-value>
	</context-param>

	<filter>
		<filter-name>OpenSessionInViewFilter</filter-name>
		<filter-class>org.springframework.orm.hibernate3.support.OpenSessionInViewFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>OpenSessionInViewFilter</filter-name>
		<url-pattern>/idmsrvc/*</url-pattern>
	</filter-mapping>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>


	<servlet>
		<servlet-name>muleServlet</servlet-name>
		<servlet-class>org.mule.transport.servlet.MuleReceiverServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>muleServlet</servlet-name>
		<url-pattern>/idmsrvc/*</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>org.mule.config.builders.MuleXmlBuilderContextListener</listener-class>
	</listener>

</web-app>
