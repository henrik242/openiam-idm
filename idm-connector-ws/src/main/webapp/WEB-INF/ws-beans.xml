<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:jaxws="http://cxf.apache.org/jaxws"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    				   http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd" >
    				   


	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" /> 
	<import resource="classpath*:META-INF/cxf/extensions.xml" />
 	<import resource="classpath*:META-INF/cxf/cxf-extension-http.xml" />
 	<import resource="classpath*:META-INF/cxf/cxf-extension-soap.xml" /> 
	
       
 	<jaxws:endpoint 
	  id="provisionService" 
	  implementor="#provision"
	  address="/ProvisionControllerService" >
	 	<jaxws:properties>
            <entry key="schema-validation-enabled" value="false" />
        </jaxws:properties>

       <jaxws:inInterceptors>
	      <bean class="org.apache.cxf.binding.soap.saaj.SAAJInInterceptor"/>
	      <bean class="org.openiam.intercept.wssec.WSS4JInInterceptor">
	         <constructor-arg>
	            <map>
	               <entry key="action" value="SAML2TokenUnsigned"/>
	            </map>
	         </constructor-arg>
	      </bean>
	   </jaxws:inInterceptors>     
	   
	 </jaxws:endpoint>

 	<jaxws:endpoint 
	  id="defaultProvisionService" 
	  implementor="#defaultProvision"
	  address="/ProvisioningService" >
	 	<jaxws:properties>
            <entry key="schema-validation-enabled" value="false" />
        </jaxws:properties>
	 </jaxws:endpoint>
	   
 
 	<jaxws:endpoint 
	  id="exampleConnectorService" 
	  implementor="#exampleConnector"
	  address="/ExampleConnectorService" >
	 	<jaxws:properties>
            <entry key="schema-validation-enabled" value="true" />
        </jaxws:properties>
	 </jaxws:endpoint>

 	<jaxws:endpoint 
	  id="oracleConnectorService" 
	  implementor="#oracleConnector"
	  address="/OracleConnectorService" >
	 	<jaxws:properties>
            <entry key="schema-validation-enabled" value="true" />
        </jaxws:properties>
	 </jaxws:endpoint>

	 <jaxws:endpoint 
	  id="ldapConnectorService" 
	  implementor="#ldapConnector"
	  address="/LDAPConnectorService" >
	 	<jaxws:properties>
            <entry key="schema-validation-enabled" value="true" />
        </jaxws:properties>
	 </jaxws:endpoint>		

	 <jaxws:endpoint 
	  id="adConnectorService" 
	  implementor="#activeDirConnector"
	  address="/ActiveDirectoryConnectorService" >
	 	<jaxws:properties>
            <entry key="schema-validation-enabled" value="false" />
        </jaxws:properties>
	 </jaxws:endpoint>			 

