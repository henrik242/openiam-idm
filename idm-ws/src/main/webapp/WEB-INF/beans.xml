	<jaxws:endpoint id="userDataService"
		implementor="#userManager"
		wsdlLocation="WEB-INF/wsdl/UserDataService.wsdl"
		address="/UserDataService"/>	
-->		
	<jaxws:endpoint id="roleService"
		implementor="#roleDataService"
		wsdlLocation="WEB-INF/wsdl/RoleDataService.wsdl"
		address="/RoleDataWebService">
		<jaxws:properties>
            <entry key="schema-validation-enabled" value="false" />
        </jaxws:properties>
	</jaxws:endpoint>		
	  		
 
	<jaxws:endpoint id="orgDataService"
		implementor="#orgManager"
		wsdlLocation="WEB-INF/wsdl/OrganizationDataService.wsdl" 
		address="/OrganizationDataService" >
		<jaxws:properties>
            <entry key="schema-validation-enabled" value="false" />
        </jaxws:properties>
	</jaxws:endpoint>

	<jaxws:endpoint 
	  id="metaService" 
	  implementor="#metadataService"
	  address="/MetadataWebService" />

	<jaxws:endpoint id="policyService" 
	  implementor="#policyDataService"
	  address="/PolicyWebService" >
	</jaxws:endpoint>     

	<jaxws:endpoint id="emailService" 
	  implementor="#mailService"
	  address="/EmailWebService" >
	</jaxws:endpoint>   

	<jaxws:endpoint id="secDomService" 
	  implementor="#secDomainService"
	  address="/SecurityDomainWebService" >
	</jaxws:endpoint> 		

	<jaxws:endpoint id="locationService" 
	  implementor="#locationDataService"
	  address="/LocationWebService" >
	</jaxws:endpoint> 

	<jaxws:endpoint id="managedService" 
	  implementor="#managedSysService"
	  address="/ManagedSystemWebService" >
	</jaxws:endpoint> 	
	
	<jaxws:endpoint id="loginService" 
	  implementor="#loginManager"
	  address="/LoginWebService" >
	</jaxws:endpoint> 	

